<style type="text/css">
  table td {
      font-size: 16px;
  }
  table tr {
      height: 40px;
  }
  a:hover {
      color: #009900;
      text-decoration: underline;
  }
</style>
<script>
    $(document).ready(function () {
        var height1 = $('#legend').height();
        var height2 = $('#menu_list').height();
        if(height1>=height2){
            $('#menu_list').css('height', height1);
            $('.show_news').css('height', height1);
        } else {
            $('#legend').css('height', height2);
            $('.show_news').css('height', height2);
        }
    })
</script>