<%= base_fields_for fdn_user do |f| %>
    <% if type == 'cq_user' %>
        <%= f.fields_for :cq_users, user, child_index: index do |cq_user_form| %>
            <%= control_table_tr({c: cq_user_form.text_field(:user_name, class: 'span3')+cq_user_form.hidden_field(:resource_type,:value=>type)},
                                 {c: cq_user_form.text_field(:memo, class: 'span3')},
                                 {c: cq_user_form.control('check_box','启用：',:status, checked_value: 'Y', unchecked_value: 'N')},
                                 {c: remove_line_tag(cq_user_form, url_for(:controller => 'fdn/users', :action => :del_jq_user, :id => user.id, :if_resource => 'yes')), style: 'vertical-align: middle'}) %>
