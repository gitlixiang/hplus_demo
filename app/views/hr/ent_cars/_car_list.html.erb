<div class="ibox-content">
  <div class="file-car">
    <% if @org.is_ent? %>
        <%= button_div do %>
            <%= bs_button_window(new_hr_ent_car_path(org_id: org_id), '创建', 'btn-primary btn-sm', 'fa fa-check') %>
        <% end %>
    <% end %>
    <div class="ibox-content">
      <%= table([{w: 3, t: '车牌号'}, {w: 3, t: '状态'}, {w: 3, t: '操作'}],
                obj: hr_ent_cars,
                pagi_param_name: 'page') do |car| %>
          <%= table_tr({c: seq(hr_ent_cars, car, params[:page]||1)},
                       {l: car.id_code},
                       {c: car.c_status.value},
                       {c: action_links([
                                                {value: '查看', url: hr_ent_car_path(car)},
                                                {value: '编辑', url: edit_hr_ent_car_path(car)},
                                                {value: '删除', url: destroy_record_hr_ent_car_path(car), params: "'org_id': '#{car.ent.organization.id}'", url_method: 'confirm', :confirm => "确定删除吗？", tips: "车链已删除！"}
                                        ]
                       )}
              ) %>
      <% end %>
    </div>
  </div>
</div>