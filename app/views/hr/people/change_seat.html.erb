                      @people_14,
                      {:prompt => '请选择'}) %>
    <% end %>
    <%= f.row('1:1') do %>
        <%= f.control('datepicker', '进单位时间:', :into_unit_date) %>
        <%= f.control('select', '退出现役军人（武警）标识:', :demob_class_code,
                      @people_16,
                      {:prompt => '请选择'}) %>
    <% end %>
    <%= f.row('1:1') do %>
        <%= f.control('select', '公务员录用跨地域标识:', :pf_area_flag,
                      @people_17,
                      {:prompt => '请选择'}) %>
