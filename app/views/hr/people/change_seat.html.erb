                      @people_21,
                      {:prompt => '请选择'}) %>
    <% end %>
    <%= f.row('1:1') do %>
        <%= f.control('select', '财政供养状况:', :financial_position_flag,
                      @people_18,
                      {:prompt => '请选择'}) %>
        <%= f.control('select', '统发工资状况:', :payrol_flag,
                      @people_18,
                      {:prompt => '请选择'}) %>
    <% end %>

<% end %>
