<div class="ibox-content">
  <%= table([{w: 2, t: '主题'}, {w: 2, t: '公文字号'}, {w: 2, t: '公文类型'}, {w: 2, t: '发起人'}, {w: 2, t: '操作'}],
            obj: docs,
            fixed: true,
            pagi_param_name: 'page') do |doc| %>
      <%= table_tr({c: seq(docs, doc, params[:page]||1)},
                   {l: doc.title},
                   {c: doc.doc_word},
                   {c: doc.doc_type_code},
                   {c: doc.created_by},
                   {c: action_links([
                                            {value: '查看', url: oa_recv_document_path(doc)},
                                            {value: '编辑', url: edit_oa_recv_document_path(doc)},
                                            {value: '删除', url: oa_recv_document_path(doc), url_method: 'delete', :confirm => "确定删除吗？"}
                                    ])}) %>
  <% end %>
</div>