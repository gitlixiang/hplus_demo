<div class="ibox-content">
  <%= table([{w: 2, t: '节点名称'},  {w: 2, t: '计划开始日期'},  {w: 2, t: '计划截止日期'},  {w: 4, t: '节点内容'},{w: 2, t: '计划完成百分比'}],
            fixed:true,
            show_seq: false,
            caption: '计划节点',
            obj: pm_nodes) do |node| %>
      <%= table_tr({c: node.name},
                   {l: node.start_date},
                   {l: node.end_date},
                   {c: node.content ? node.content.html_safe : ''},
                   {c: progress_bar(node.percent) }
          ) %>
  <% end %>
</div>