<%= javascript_include_tag 'ckeditor/init' %>
<%= datepicker_include_tag %>
<%#= javascript_include_tag 'ckeditor/override' %>
<div class="ibox-content">
  <%= f.hidden_field :plan_id %>
  <%= f.hidden_field :node_id %>
  <%= f.row('1:1') do %>
      <%= f.control('text', '节点：', :node, class: 'required') %>
      <%= f.control('number', '已完成百分比：', :percent, class: 'required') %>
  <% end %>

  <%= f.row('1:1') do %>
      <div id="date_array">
        <%= f.control('text', '起始日期：', :start_date, class: 'date') %>
        <%= f.control('text', '截止日期：', :end_date, class: 'date') %>
      </div>
  <% end %>

  <%#= f.row('1:1') do %>
  <%#= f.control('number', '排序：', :sort_seq, class:'required') %>
  <%#= f.control('radios', '已完成情况：', :status, [['完成',1], ['滞后', 0]], inline: 'inline') %>
  <%# end %>

  <%= f.row('1') do %>
      <%= f.control('text_area', '进展情况：', :content, rows: 10, class: 'span10') %>
  <% end %>
</div>
<script>
    $('#date_array').datepicker({
        inputs: $('.date').toArray(),
        autoclose: false
    });
</script>
